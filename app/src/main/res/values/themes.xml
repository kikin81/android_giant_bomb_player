<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.GBPlayer" parent="Base.Theme.GBPlayer"/>
    <!--Base custom theme which will be shared between both light and dark theme variants-->
    <style name="Base.Theme.GBPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Material color attributes (light theme) -->
        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <!--selection controls.-->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.GbTypographyStyles.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.GbTypographyStyles.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.GbTypographyStyles.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.GbTypographyStyles.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.GbTypographyStyles.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.GbTypographyStyles.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.GbTypographyStyles.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.GbTypographyStyles.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.GbTypographyStyles.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.GbTypographyStyles.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.GbTypographyStyles.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.GbTypographyStyles.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.GbTypographyStyles.Overline</item>

    </style>
</resources>
